<h1>Editing Book</h1>
<!--エラー分の表示-->
<font color="red">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
</font>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br />
  <%= f.submit 'Update Book' %>
<% end %>
