<div class="book_new">
  <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <h3>Title</h3>
      <%= f.text_field :title %>
      <h3>body</h3>
      <%= f.text_area :body %><br />
      <%= f.submit 'Create book' %>
    <% end %>
</div>

<div class="books">
  <h2>Book</h2>
  <table class="table-books">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td></td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>