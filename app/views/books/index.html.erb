<!--エラー分の表示-->
<font color="red">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
</font>

<div class="profile">
  <h2>Users info</h2>
    <!--変更前 %= image_tag('sample-author1.png') % -->
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="profile-table">
        <tbody>

          <tr>
            <th>name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= @user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <p><%= link_to "user編集", edit_user_path(@user) %></p>
</div>
<div class="book_new">
  <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <h3>Title</h3>
      <%= f.text_field :title %>
      <h3>body</h3>
      <%= f.text_area :body %><br />
      <%= f.submit 'Create book' %>
    <% end %>
</div>

<div class="books">
  <h2>Books</h2>
  <table class="table-books">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <!--投稿したユーザ詳細画面に遷移させる-->
              <%= link_to user_path(@user.id) do %>
                <!--画像が投稿ユーザ画像になるようにする-->
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>