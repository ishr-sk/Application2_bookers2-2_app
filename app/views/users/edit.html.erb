<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 pt-3">
<div class="user-edit">
  <h2>User info</h2>
    <!--エラー分の表示-->
    <font color="red">
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </font>
    <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">Name</label><br />
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name", class: 'form-control'  %><br />
      
      <label for="inputImage">Image</label><br />
      <%= f.attachment_field :profile_image, placeholder: "image" %><br />
      
      <label for="inputIntroduction">Introduction</label><br />
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction", class: 'form-control'  %><br />
      <%= f.submit "Update User", class: 'btn btn-secondary' %><br />
    <% end %>
</div>
  </div> 
 </div> 
 </div>
