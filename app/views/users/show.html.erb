<!--サクセスメッセージ-->
<font color="green">
  <% if flash[:notice] %>
    <p id = "notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
</font>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 pt-3">
      <!--部分テンプレート-->
      <%= render 'users/user_info', user: @user %>
        
      <div class="book_new">
        <h2>New book</h2>
          <%= form_with model:@book, local:true do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>body</p>
            <%= f.text_area :body %><br />
            <%= f.submit 'Create Book', class: 'btn btn-success' %>
          <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1 pt-3">
      <div class="books">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %> 
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>
