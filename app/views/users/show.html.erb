<div class="profile">
  <h2>Users info</h2>
    <!--変更前 %= image_tag('sample-author1.png') % -->
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="profile-table">
        <tbody>

          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <p><%= link_to "user編集", edit_user_path(@user) %></p>
</div>

<div class="book_new">
  <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <h3>Title</h3>
      <%= f.text_field :title %>
      <h3>body</h3>
      <%= f.text_area :body %><br />
      <%= f.submit 'Create book' %>
    <% end %>
</div>


<div class="books">
  <h2>Book</h2>
  <table class="table-books">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

